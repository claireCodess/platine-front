<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="huntermahroug.com.lille1campus.activities.EventDetailsActivity">

    <TextView
        android:id="@+id/name_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Conférence astronomie"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="vendredi 6 octobre de 11h à 12h"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/date_img"
        app:layout_constraintStart_toEndOf="@+id/date_img"
        app:layout_constraintTop_toTopOf="@+id/date_img" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Lilliad, Lille 1, Villeneuve-d'Ascq"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/location_img"
        app:layout_constraintStart_toEndOf="@+id/location_img"
        app:layout_constraintTop_toTopOf="@+id/location_img" />

    <TextView
        android:id="@+id/reservation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Sans réservation"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/reservation_img"
        app:layout_constraintStart_toEndOf="@+id/reservation_img"
        app:layout_constraintTop_toTopOf="@+id/reservation_img" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Gratuit"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/price_img"
        app:layout_constraintStart_toEndOf="@+id/price_img"
        app:layout_constraintTop_toTopOf="@+id/price_img" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="8"
        android:minLines="3"
        android:text="TextView"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="334dp"
        tools:text="@string/static_description" />

    <ImageView
        android:id="@+id/add_favourite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/share_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_favourite" />

    <ImageView
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share" />

    <ImageView
        android:id="@+id/date_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_clock"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="53dp" />

    <ImageView
        android:id="@+id/location_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/date_img"
        app:srcCompat="@drawable/ic_location"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/reservation_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location_img"
        app:srcCompat="@drawable/ic_reservation"
        tools:layout_editor_absoluteX="8dp" />

    <ImageView
        android:id="@+id/price_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/reservation_img"
        app:srcCompat="@drawable/ic_price"
        tools:layout_editor_absoluteX="8dp" />

    <!-- <android.support.constraint.Barrier
        android:id="@+id/limit_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="textView2,textView1" /> -->

    <android.support.constraint.Guideline
        android:id="@+id/guideline_header_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="53dp" />

</android.support.constraint.ConstraintLayout>

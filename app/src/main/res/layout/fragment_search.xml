<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="huntermahroug.com.lille1campus.view.fragment.SearchFragment">

    <android.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Rechercher"
        app:layout_constraintBottom_toTopOf="@+id/best_result_view" />
    <!--  /> -->

    <!-- <FrameLayout
        android:id="@+id/search_fragment_placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" /> -->

    <!--  /> -->

    <TextView
        android:id="@+id/best_result_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:text="@string/best_result"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/result_layout"
        app:layout_constraintTop_toBottomOf="@+id/search_view"
        tools:layout_editor_absoluteX="0dp" />

    <FrameLayout
        android:id="@+id/result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/best_result_view"
        app:layout_constraintBottom_toTopOf="@+id/all_results_view"
        android:visibility="invisible">

        <include
            android:id="@+id/list_item_layout"
            layout="@layout/event_item_layout" />
    </FrameLayout>

    <Button
        android:id="@+id/all_results_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:text="@string/all_results"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_layout" />

    <!-- <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="118dp" /> -->
    <!-- app:layout_constraintTop_toBottomOf="@event_item_layoutyout" /> -->

</android.support.constraint.ConstraintLayout>
